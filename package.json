{
  "name": "file-server",
  "version": "1.0.0",
  "description": "A simple file server that serves directory listings",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "build": "npm run build:linux && npm run build:windows && npm run build:macos",
    "build:linux": "pkg index.js --output serve/FileServer-linux --targets node18-linux-x64",
    "build:windows": "pkg index.js --output serve/FileServer-windows.exe --targets node18-win-x64", 
    "build:macos": "pkg index.js --output serve/FileServer-macos --targets node18-macos-x64"
  },
  "keywords": [
    "file-server",
    "static-server",
    "directory-listing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [],
    "scripts": [
      "index.js"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-win-x64", 
      "node18-macos-x64"
    ],
    "outputPath": "serve/"
  }
}